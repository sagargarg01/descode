<div class="cont-noti">
    <div class="card small" id="notification">
        <div class="card-body">
            <h5 class="card-title small"> Check Your Email</h5>
            <p class="card-text">
                we have send you an email to your registered email id, use the provided link to reset your Password
            </p>
        </div>
    </div>
</div>


<div class="container">
    <div class="card">
        <div class="card-body">

            <h5 class="card-title"> Reset Your Password </h5>

            <div>
                <% if(user.avatar){ %>
                <img class="rounded mx-auto d-block" width="100" height="100" src="<%= user.avatar %>" alt="">
                <% } else{ %>
                <img class="rounded mx-auto d-block" width="100" height="100" src="<%= assetPath('images/no_profile.jpg') %>" alt="">
                <% } %>

                <div class="name">
                    <b>
                        <%= user.name %>
                    </b>
                </div>
            </div>

            <div class="button">
                <form id="mail_send_form" action="/users/send-mail" method="POST">
                    <input type="hidden" name="email" value="<%= user.email %>">
                    <div>
                        <button type="submit" class="send_email"> Continue </button>
                        <a href="/users/forgot_password"><button type="button">Not You?</button></a>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>


<script src="<%= assetPath('js/forgot_password.js') %>"></script>
