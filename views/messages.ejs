
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css"
rel="stylesheet">
<link rel="stylesheet" href="<%= assetPath('css/messages.css') %>">

<div class="container">
<div class="messaging">
   <div class="inbox_msg" id="user-chat-box">
      <div class="inbox_people">
         <div class="headind_srch">
            <div class="recent_heading">
               <h4>ChatRooms</h4>
            </div>
         </div>
         <div class="inbox_chat">

            <% for(let friend of friendList){ %>

               <div class="chat_list" id="friend-<%=friend._id%>" data-friendid="<%= friend._id%>">
                  <div class="chat_people">
                     <div>  
                        <% if(friend.avatar){ %>
                        <img class="rounded-circle" width="45" height="45" src="<%= friend.avatar %>" alt="">
                        <% } else{ %>
                        <img class="rounded-circle" width="45" src="//ptetutorials.com/images/user-profile.png" alt="">
                        <% } %>
                     </div>
                     <div class="chat_ib">
                        <h5> <%= friend.name %></h5>
                     </div> 
                  </div>
               </div>

            <% } %>
         </div>
      </div>

       <div class="message_box_container"></div> 
       
   </div>

</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script src="<%= assetPath('js/chat_engine.js') %>"></script>
